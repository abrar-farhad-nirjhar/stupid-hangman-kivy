
<MyLabel>:
    color: '000000'
    
<Button>:
    size_hint:.2,.2
    radius : [50,]
    background_normal : 'orange.png'
    background_down : 'green.png'

<MyGridLayout>:
    rows : 3
    spacing : 2
    display:display
    im:im

    BoxLayout:
        orientation: 'horizontal'
        
        StackLayout:
            
            Label:
                id:display
                color:0,0,0,1

            
        Image:
            id:im
            allow_stretch: True
            keep_ratio: True
            size_hint_y: 1
            size_hint_x: 1
            width: self.parent.width
            height: self.parent.width/self.image_ratio
            
    
