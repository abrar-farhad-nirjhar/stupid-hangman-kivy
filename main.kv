
<MyLabel>:
    color: '000000'
    
<Button>:
    size_hint:.2,.2
    radius : [50,]
    background_normal : 'orange.png'
    background_down : 'green.png'

<GridLayout>:
    rows : 3
    spacing : 2

    BoxLayout:
        orientation: 'horizontal'
        
        StackLayout:
            
            MyLabel:
                color:0,0,0,1

            
        MyImage:
            allow_stretch: True
            keep_ratio: True
            size_hint_y: 1
            size_hint_x: 1
            width: self.parent.width
            height: self.parent.width/self.image_ratio
            
    
